<!DOCTYPE html><html lang='es' class=''>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style class="cp-pen-styles">
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 800px;
            margin: auto;
            text-align: center;
         }

        .title {
        color: grey;
        font-size: 100px;
        }
        .usuario {
        color:black;
        font-size: 50px;
        }

        button {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
        }

        button:hover, a:hover {
        opacity: 0.7;
        }
    </style>
</head>
<body>
<form id="form1">
    <div class="card">
        <p class="title" style="color:black;">"Qué Me Pongo"</p>
        <label class="usuario" id="usuario">Bienvenido {{nombre}} {{apellido}} !! </label>
        <p><button name="cerrarSesion" onclick="cerrarSesion();" >Cerrar Sesión</button></p>
        <p><button name="guardarropa" onclick="listarGuardarropa();" >Mis guardarropas</button></p>
    </div>
</form>
<script>
        function listarGuardarropa(){
            document.getElementById("form1").action = "/guardarropas";
            document.getElementById("form1").method = "GET";
        }
        function cerrarSesion(){
            document.getElementById("form1").action = "/login";
            document.getElementById("form1").method = "GET";
        }
    </script>
</body>