<html>
<head>
    <link rel="stylesheet" href="/main.css">
    <script src="js/jquery-1.11.0.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/calendario/2019/12">Mi Calendario</a>
    <a class="navbar-brand" href="/guardarropas">Mis Guardarropas</a>
    <a class="navbar-brand" href="/eventos">Mis Eventos</a>
    <a class="navbar-brand" href="/sugerencias">Calificación de sugerencias</a>
</nav>
<div class="content">
    <h3>
        Califique la sugerencia
    </h3>
    {{#with sugerencia}}
    <dl class="row">
        <dt class="col-sm-3">Accesorio</dt>
        <dd class="col-sm-9">
            {{accesorio.nombre}}
            {{accesorio.categoria}}
            {{accesorio.material}}
            {{accesorio.trama}}
            <img src="/remera.png" class="img-thumbnail"/>
        </dd>

        <dt class="col-sm-3">Prendas Superiores</dt>
        <dd class="col-sm-9">
            <dl class="row">
                {{#each prendasSuperiores}}
                <dd class="col-sm-12">
                    {{nombre}}
                    {{categoria}}
                    {{material}}
                    {{trama}}
                    <img src="/remera.png" class="img-thumbnail"/>
                </dd>
                {{/each}}
            </dl>
        </dd>

        <dt class="col-sm-3">Prenda Inferior</dt>
        <dd class="col-sm-9">
            {{prendaInferior.nombre}}
            {{prendaInferior.categoria}}
            {{prendaInferior.material}}
            {{prendaInferior.trama}}
            <img src="/remera.png" class="img-thumbnail"/>
        </dd>
        <dt class="col-sm-3">Calzado</dt>
        <dd class="col-sm-9">
            {{calzado.nombre}}
            {{calzado.categoria}}
            {{calzado.material}}
            {{calzado.trama}}
            <img src="/remera.png" class="img-thumbnail"/>
        </dd>
        <dt class="col-sm-3">Accesorio Cuello</dt>
        <dd class="col-sm-9">
            {{accesorioCuello.nombre}}
            {{accesorioCuello.categoria}}
            {{accesorioCuello.material}}
            {{accesorioCuello.trama}}
            <img src="/remera.png" class="img-thumbnail"/>
        </dd>
        <dt class="col-sm-3">Accesorio Manos</dt>
        <dd class="col-sm-9">
            {{accesorioManos.nombre}}
            {{accesorioManos.categoria}}
            {{accesorioManos.material}}
            {{accesorioManos.trama}}
            <img src="/remera.png" class="img-thumbnail"/>
        </dd>
    </dl>
    {{/with}}
    <form action="/sugerencias/{{sugerenciaId}}/calificacion" method="post" >
        <div class="form-group col-lg">
            <label for="puntuacion">Elija la calificación</label>
            <input type="range" class="custom-range" min="0" max="5" id="puntuacion" name="puntuacion" onchange="myFunction()">
            </input>
        <div id="estrellas">
            Ha seleccionado 5
        </div>
        </div>
        <button class="btn btn-primary" type="submit">Calificar</button>
    </form>
    {{#if error}}
    <div class="alert alert-danger err" role="alert">
        {{error}}
    </div>
    {{/if}}
</div>
</body>
{{#if error}}
<script>
    window.alert("Un error ha ocurrido")
</script>
{{/if}}

<script>
    function myFunction()
    {
        var input = document.getElementById('puntuacion')
        var div = document.getElementById('estrellas');
        div.innerHTML = "Ha seleccionado " + input.value;
    }
</script>
</html>